<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <RelativeLayout
        android:background="@android:color/white"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="设置"
            />
        <TextView
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_setting_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_32"
            android:textColor="@color/col_10DB9F"
            android:visibility="gone"
            android:text="确定"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_ECEEF0"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:orientation="horizontal">
 <TextView
     android:layout_centerVertical="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="消息提醒"
     android:textSize="18sp"
     />
    <com.ike.sq.alliance.ui.widget.SwitchButton
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/sw_setting_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
</RelativeLayout>
    <Button
        android:id="@+id/btn_setting_out"
        android:layout_marginTop="30dp"
        android:layout_width="600px"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@mipmap/mine_claim_yes"/>
</LinearLayout>
